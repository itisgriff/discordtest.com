{
  "name": "discord-tools",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": "^23.3.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev --config server/wrangler.toml",
    "dev:server": "cross-env NODE_ENV=development node --import tsx server/index.ts",
    "typecheck": "pnpm exec tsc -p tsconfig.json --noEmit && pnpm exec tsc -p tsconfig.node.json --noEmit && pnpm exec tsc -p server/tsconfig.json --noEmit",
    "build": "pnpm typecheck && vite build",
    "build:worker": "pnpm typecheck && tsc -p server/tsconfig.json",
    "deploy:worker": "pnpm build:worker && wrangler deploy --config server/wrangler.toml",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hono/node-server": "1.13.7",
    "@radix-ui/react-toast": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "hono": "4.6.15",
    "lodash": "^4.17.21",
    "lucide-react": "^0.469.0",
    "node-fetch": "^3.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241224.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.6",
    "wrangler": "^3.99.0"
  }
}
